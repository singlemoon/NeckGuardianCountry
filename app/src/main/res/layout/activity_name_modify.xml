<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mine_bg"
    tools:context="com.neckguardian.activity.Mine.account_settings.NameModifyActivity">
    <include layout="@layout/title_bar_back"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/separation"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="29dp">

        <LinearLayout
            style="@style/setOption"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="24.5dp"
                android:layout_height="22dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:src="@mipmap/modify_name"/>
            <EditText
                android:id="@+id/nick_name_edit"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/username"
                android:textColor="@color/text_color_4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:layout_marginTop="6.5dp"
                android:layout_marginBottom="6.5dp"
                android:gravity="right|center_vertical">
                <ImageView
                    android:id="@+id/modify_cancel"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@mipmap/modify_cancel"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/submit_but"
            android:layout_width="339dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="59.5dp"
            android:background="@drawable/solid_unclicked"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="21sp" />
    </LinearLayout>
</LinearLayout>
