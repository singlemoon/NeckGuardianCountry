<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/calendar_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_e5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:background="@color/white_e5">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <com.timqi.sectorprogressview.ColorfulRingProgressView
                android:id="@+id/date_pro"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:bgColor="@color/ggg"
                app:fgColorEnd="@color/text_color_blue_2f"
                app:fgColorStart="@color/text_color_blue_2f"
                app:startAngle="0"
                app:strokeWidth="2dp" />

            <TextView
                android:id="@+id/day_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_item_cal"
                android:gravity="center"
                android:text="11"
                android:textColor="@color/text_color_black"
                android:textSize="12sp" />
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent" />

</LinearLayout>