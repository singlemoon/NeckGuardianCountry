<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mine_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="233.5dp"
                android:background="@mipmap/mine_bg"
                android:orientation="vertical"
                android:scaleType="centerCrop">

                <LinearLayout
                    android:id="@+id/login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:layout_marginTop="48dp"
                    android:clickable="true"
                    android:gravity="center|center_vertical"
                    android:orientation="vertical">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/mine_head_img"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/nologin_n"
                        app:riv_corner_radius="30dip"
                        app:riv_mutate_background="true"
                        app:riv_oval="true" />

                    <TextView
                        android:id="@+id/username_mine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="@string/please_login"
                        android:textColor="@color/mine_text"
                        android:textSize="21sp" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- 健康、设备主功能-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="192dp"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <LinearLayout
                        android:id="@+id/mine_health"
                        style="@style/mineOption"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="43dp"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="11dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="43dp"
                                android:layout_height="match_parent"
                                android:src="@mipmap/mine_health" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="16dp"
                                android:gravity="center|center_vertical"
                                android:text="我的健康"
                                android:textColor="@color/mine_text"
                                android:textSize="21sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="14dp"
                                android:src="@mipmap/mine_page" />
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/separation_mine"
                        android:layout_marginLeft="18.2dp"/>
                    <LinearLayout
                        android:id="@+id/mine_health_analyze"
                        style="@style/mineOption"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="43dp"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="11dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="43dp"
                                android:layout_height="match_parent"
                                android:src="@mipmap/mine_health_analysis" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="16dp"
                                android:gravity="center|center_vertical"
                                android:text="健康分析"
                                android:textColor="@color/mine_text"
                                android:textSize="21sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="14dp"
                                android:src="@mipmap/mine_page" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/separation_mine"
                        android:layout_marginLeft="18.2dp"/>
                    <LinearLayout
                        android:id="@+id/health_set"
                        style="@style/mineOption"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="43dp"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="11dp"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="43dp"
                                    android:layout_height="match_parent"
                                    android:contentDescription="@null"
                                    android:src="@mipmap/health_set" />

                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="16dp"
                                android:gravity="center|center_vertical"
                                android:text="健康设置"
                                android:textColor="@color/mine_text"
                                android:textSize="21sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="14dp"
                                android:src="@mipmap/mine_page" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mine_machine"
                    style="@style/mineOption"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="41dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="43dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="11dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="43dp"
                                android:layout_height="match_parent"
                                android:contentDescription="@null"
                                android:src="@mipmap/mine_machine" />

                            <com.simo.utils.myView.VerticalProgressBar
                                android:id="@+id/mine_progress"
                                style="@android:style/Widget.ProgressBar.Horizontal"
                                android:layout_width="2dp"
                                android:layout_height="26dp"
                                android:layout_marginLeft="31dp"
                                android:layout_marginTop="10dp"
                                android:max="100"
                                android:progress="75"
                                android:progressDrawable="@drawable/progress_style_small" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:gravity="center|center_vertical"
                            android:text="我的脖士"
                            android:textColor="@color/mine_text"
                            android:textSize="21sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="14dp"
                            android:src="@mipmap/mine_page" />
                    </LinearLayout>
                </LinearLayout>

                <!--余下功能 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="41dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/mine_settings"
                        style="@style/mineOption"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="43dp"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="11dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="43dp"
                                android:layout_height="match_parent"
                                android:src="@mipmap/mine_settings" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="16dp"
                                android:gravity="center|center_vertical"
                                android:text="通用设置"
                                android:textColor="@color/mine_text"
                                android:textSize="21sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="14dp"
                                android:src="@mipmap/mine_page" />
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/white" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="18dp"
                            android:background="@color/separation_mine" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/mine_share"
                        style="@style/mineOption"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="43dp"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="11dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="43dp"
                                android:layout_height="match_parent"
                                android:src="@mipmap/mine_share" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="16dp"
                                android:gravity="center|center_vertical"
                                android:text="分享给好友"
                                android:textColor="@color/mine_text"
                                android:textSize="21sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="14dp"
                                android:src="@mipmap/mine_page" />
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/white" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="18dp"
                            android:background="@color/separation_mine" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/mine_advice"
                        style="@style/mineOption"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="43dp"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="11dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="43dp"
                                android:layout_height="match_parent"
                                android:src="@mipmap/mine_feedback" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="16dp"
                                android:gravity="center|center_vertical"
                                android:text="意见反馈"
                                android:textColor="@color/mine_text"
                                android:textSize="21sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="14dp"
                                android:src="@mipmap/mine_page" />
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/white" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="18dp"
                            android:background="@color/separation_mine" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/mine_about"
                        style="@style/mineOption"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="43dp"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="11dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="43dp"
                                android:layout_height="match_parent"
                                android:src="@mipmap/about_boshi" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="16dp"
                                android:gravity="center|center_vertical"
                                android:text="关于我们"
                                android:textColor="@color/mine_text"
                                android:textSize="21sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="14dp"
                                android:src="@mipmap/mine_page" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>
